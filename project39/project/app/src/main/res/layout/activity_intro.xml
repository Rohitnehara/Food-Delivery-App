<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiant"
    tools:context=".Activity.IntroActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/newanimation"
        android:layout_width="253dp"
        android:layout_height="139dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/bouncingshape"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:fontFamily="cursive"
        android:gravity="center|top"
        android:text="City Pizza"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="558dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/usernameSignUp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/btn_gradient"
            android:drawableLeft="@drawable/id_card"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/EmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_gradient"
            android:drawableLeft="@drawable/gmail"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/PasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_gradient"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:ems="10"
            android:hint="Passwords"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/AlreadyAccount"
            android:layout_width="207dp"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:text="Already have account"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/googleSignUp"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"

            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/google"
            android:text="Google"
            android:textColor="#040404"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/SignUP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:backgroundTint="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/signup"
            android:text="Sign Up"
            android:textColor="#040404"
            app:cornerRadius="50dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="324dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toTopOf="@+id/newanimation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asset_3" />

</androidx.constraintlayout.widget.ConstraintLayout>
